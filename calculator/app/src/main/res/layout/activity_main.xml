<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5C5C5">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@color/black"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_height="133dp"
            android:gravity="end|center"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:textSize="60dp"
            android:text=" "
            tools:ignore="RtlCompat" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="536dp"
        android:columnCount="4"
        android:rowCount="8">

        <Button
            android:id="@+id/button_open_bracket"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:textSize="23dp"
            android:background="@drawable/button_style"
            android:text="(" />

        <Button
            android:id="@+id/button_close_bracket"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_style"
            android:textSize="23dp"
            android:text=")" />

        <Button
            android:id="@+id/button_exponent"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_style"
            android:textSize="23dp"
            android:text="^" />

        <Button
            android:id="@+id/button_log"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="0"
            android:layout_column="3"
            android:background="@drawable/button_style"
            android:textSize="23dp"
            android:text="log" />

        <Button
            android:id="@+id/button_percentage"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_functioning"
            android:textSize="23dp"
            android:text="%" />

        <Button
            android:id="@+id/button_sqroot"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_functioning"
            android:textSize="23dp"
            android:text="√" />

        <Button
            android:id="@+id/button_square"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_functioning"
            android:textSize="23dp"
            android:text="P²" />

        <Button
            android:id="@+id/button_xinverse"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="1"
            android:layout_column="3"
            android:background="@drawable/button_functioning"
            android:textSize="23dp"
            android:text="x⁻¹" />

        <Button
            android:id="@+id/button_clear_all"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_functioning"
            android:textSize="23dp"
            android:text="CE" />

        <Button
            android:id="@+id/button_clear"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_functioning"
            android:textSize="23dp"
            android:text="C" />

        <Button
            android:id="@+id/button_edit"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_functioning"
            android:textSize="23dp"
            android:text="⌫" />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="2"
            android:layout_column="3"
            android:background="@drawable/button_functioning"
            android:textSize="23dp"
            android:text="+" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button"
            android:textSize="23dp"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button"
            android:textSize="23dp"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button"
            android:textSize="23dp"
            android:text="3" />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="3"
            android:layout_column="3"
            android:background="@drawable/button_functioning"
            android:textSize="23dp"
            android:text="-" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button"
            android:textSize="23dp"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button"
            android:textSize="23dp"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button"
            android:textSize="23dp"
            android:text="6" />

        <Button
            android:id="@+id/button_multiplication"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="4"
            android:layout_column="3"
            android:background="@drawable/button_functioning"
            android:textSize="23dp"
            android:text="*" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button"
            android:textSize="23dp"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button"
            android:textSize="23dp"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button"
            android:textSize="23dp"
            android:text="9" />

        <Button
            android:id="@+id/button_division"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="5"
            android:layout_column="3"
            android:background="@drawable/button_functioning"
            android:textSize="23dp"
            android:text="/" />

        <Button
            android:id="@+id/button_ChangeSymbol"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_functioning"
            android:textSize="23dp"
            android:text="+/-" />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button"
            android:textSize="23dp"
            android:text="0" />

        <Button
            android:id="@+id/button_dot"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="6"
            android:layout_column="2"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_functioning"
            android:textSize="23dp"
            android:text="."/>

        <Button
            android:id="@+id/button_equal"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_row="6"
            android:layout_column="3"
            android:background="@drawable/button_functioning"
            android:textSize="23dp"
            android:text="=" />

    </GridLayout>
</LinearLayout>


